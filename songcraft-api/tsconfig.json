{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@songcraft/shared": ["../shared/src"],
      "@songcraft/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*", "src/routes/songs.ts"],
  "exclude": ["node_modules", "dist"]
}
