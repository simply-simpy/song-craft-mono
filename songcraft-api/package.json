{
  "name": "songcraft-api",
  "version": "1.0.0",
  "description": "Songcraft API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "format": "biome format --write",
    "lint": "biome lint",
    "check": "biome check --write",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:dev": "./scripts/migrate-dev.sh",
    "db:migrate:prod": "./scripts/migrate-prod.sh",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:introspect": "drizzle-kit introspect",
    "add-global-roles": "psql $DATABASE_URL -f scripts/add-global-roles.sql",
    "bootstrap-superuser": "ts-node scripts/bootstrap-superuser.ts",
    "seed:users": "ts-node src/scripts/seedUsers.ts",
    "generate-dbml": "tsx scripts/generate-dbml.ts",
    "generate-erd": "tsx scripts/generate-erd.ts",
    "compare-schemas": "tsx scripts/compare-schemas.ts",
    "generate-dbml-relations": "tsx scripts/generate-dbml-with-relations.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@songcraft/shared": "file:../shared",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^27.0.0",
    "dompurify": "^3.3.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.5.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^5.0.3",
    "jsdom": "^27.0.1",
    "pg": "^8.16.3",
    "ts-node": "^10.9.2",
    "zod": "^3.25.76"
  }
}
