# Development Environment Variables for Linode Dev Instance
# Copy this file to .env.dev-linode and fill in your values

# Database Configuration
POSTGRES_DB=songcraft_dev
POSTGRES_USER=songcraft
POSTGRES_PASSWORD=dev_password_123

# Clerk Authentication (use development keys)
CLERK_SECRET_KEY=your_clerk_dev_secret_key_here

# Development Settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# Optional: Custom domain for dev instance
DOMAIN=dev.yourdomain.com

# Development: Allow HTTP access (less secure but easier for dev)
ALLOW_HTTP=true

# Development: More permissive CORS
CORS_ORIGIN=*

# Development: Database connection pool (smaller for dev)
DB_POOL_MIN=1
DB_POOL_MAX=5

# Development: Redis (optional, for caching/sessions)
REDIS_URL=redis://redis:6379
